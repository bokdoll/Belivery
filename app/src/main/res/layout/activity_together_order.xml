<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TogetherOrderActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_order_together_top"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:elevation="5dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kopubworlddotumbold"
            android:text="같이 시키리"
            android:textColor="@color/Black2e"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_order_together_back"
            android:layout_width="56dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/arrow_back_green_small" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_order_together_top">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_dialog_white_filled">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_order_together_bill"
                android:layout_width="match_parent"
                android:layout_height="406dp"
                android:background="@color/colorGreen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="330dp"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout7"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout7"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout7"
                    app:srcCompat="@drawable/order_bottom" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout7"
                    android:layout_width="0dp"
                    android:layout_height="365dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:background="@android:color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textView52"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:fontFamily="@font/notosansmedium"
                        android:text="묵은지부대찌개 용산점"
                        android:textColor="@color/Black2e"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView16" />

                    <TextView
                        android:id="@+id/textView54"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="21dp"
                        android:layout_marginBottom="15dp"
                        android:text="현재 주문금액"
                        android:textColor="@color/Black2e"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/textView55"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="21dp"
                        android:text="7,500원"
                        android:textColor="@color/Black2e"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView54"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView54" />

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="0dp"
                        android:layout_height="3dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintBottom_toTopOf="@+id/textView54"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/dash_line" />

                    <TextView
                        android:id="@+id/textView56"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="27dp"
                        android:text="이 빌리는 나와 아주 가까워요."
                        android:textColor="@color/Black2e"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView52" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginEnd="18dp"
                        android:background="@color/grayC7"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView56" />

                    <FrameLayout
                        android:id="@+id/frameLayout2"
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:layout_marginStart="19dp"
                        android:layout_marginTop="27dp"
                        android:background="@drawable/circle_mint_filled"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view3">

                    </FrameLayout>

                    <TextView
                        android:id="@+id/textView57"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="1인 부대찌개 1개"
                        android:textColor="@color/Black2e"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="@+id/frameLayout2"
                        app:layout_constraintStart_toEndOf="@+id/frameLayout2"
                        app:layout_constraintTop_toTopOf="@+id/frameLayout2" />

                    <TextView
                        android:id="@+id/textView58"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="21dp"
                        android:text="6,500원"
                        android:textColor="@color/Black2e"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view3" />

                    <FrameLayout
                        android:id="@+id/frameLayout4"
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:layout_marginStart="19dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/circle_mint_filled"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayout2">

                    </FrameLayout>

                    <TextView
                        android:id="@+id/textView59"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="공기밥 1개"
                        android:textColor="@color/Black2e"
                        app:layout_constraintBottom_toBottomOf="@+id/frameLayout4"
                        app:layout_constraintStart_toEndOf="@+id/frameLayout4"
                        app:layout_constraintTop_toTopOf="@+id/frameLayout4" />

                    <TextView
                        android:id="@+id/textView60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="21dp"
                        android:text="1,000원"
                        android:textColor="@color/Black2e"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView58" />

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.55"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/img_food" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout9"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_order_together_bill">

                <TextView
                    android:id="@+id/tv_together_order_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="21dp"
                    android:fontFamily="@font/notosansregular"
                    android:text="앞으로 "
                    android:textColor="@color/Black2e"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_together_order_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kopubworlddotumbold"
                    android:text="7,500원"
                    android:textColor="@color/Black2e"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_together_order_1"
                    app:layout_constraintStart_toEndOf="@+id/tv_together_order_1"
                    app:layout_constraintTop_toTopOf="@+id/tv_together_order_1" />

                <TextView
                    android:id="@+id/tv_together_order_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:text=" 남았어요."
                    android:textColor="@color/Black2e"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_together_order_2"
                    app:layout_constraintStart_toEndOf="@+id/tv_together_order_2"
                    app:layout_constraintTop_toTopOf="@+id/tv_together_order_2" />

                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/contentLoadingProgressBar"
                    android:layout_width="0dp"
                    android:layout_height="7dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:max="100"
                    android:progress="75"
                    android:progressDrawable="@drawable/pb_mint_gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_together_order_3" />

                <TextView
                    android:id="@+id/tv_together_order_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="16dp"
                    android:text="00초"
                    android:textColor="@color/colorMint"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_together_order_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00분 "
                    android:textColor="@color/colorMint"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_together_order_sec"
                    app:layout_constraintEnd_toStartOf="@+id/tv_together_order_sec"
                    app:layout_constraintTop_toTopOf="@+id/tv_together_order_sec" />

                <TextView
                    android:id="@+id/tv_together_order_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:fontFamily="@font/notosansregular"
                    android:text="이제 주문할 수 있어요."
                    android:textColor="@color/Black2e"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/contentLoadingProgressBar"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grayC7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout9" />

            <TextView
                android:id="@+id/textView66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="27dp"
                android:text="나는 이거 먹을래"
                android:textColor="@color/Black2e"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view4" />

            <ImageView
                android:id="@+id/iv_together_order_unordered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView66"
                app:srcCompat="@drawable/img_blank_beli" />

            <TextView
                android:id="@+id/tv_together_order_unordered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="80dp"
                android:text="아직 주문한 메뉴가 없어요~"
                android:textColor="#adadad"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_together_order_unordered" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_together_order_my_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView66"
                app:layout_constraintTop_toBottomOf="@+id/textView66">

                <TextView
                    android:id="@+id/textView68"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="1인 묵은지감자탕부대찌개"
                    android:textColor="@color/Black2e"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/frameLayout6"
                    app:layout_constraintStart_toEndOf="@+id/frameLayout6"
                    app:layout_constraintTop_toTopOf="@+id/frameLayout6" />

                <FrameLayout
                    android:id="@+id/frameLayout6"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/circle_mint_filled"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </FrameLayout>

                <TextView
                    android:id="@+id/textView69"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8,500원"
                    android:textColor="@color/Black2e"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_order_together_top">

        <Button
            android:id="@+id/btn_together_order_unordered"
            android:elevation="10dp"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/border_mint_empty"
            android:fontFamily="@font/kopubworlddotumbold"
            android:text="+ 같이 주문하기"
            android:textColor="@color/colorMint"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_together_order_ordered"
            android:layout_width="176dp"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/border_mint_filled"
            android:elevation="10dp"
            android:fontFamily="@font/kopubworlddotumbold"
            android:text="8,500원 주문하기 (1)"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>